R"(
#shader vertex
#attribute vec3 Pos 0
#uniform mat4 ViewProjection

out vec3 Texcoord;

void main(void)
{
	SV_Position = ViewProjection * vec4(Pos, 1.0);
	Texcoord = Pos;
}

#shader fragment
#uniform TextureCube Skybox

in vec3 Texcoord;

void main(void)
{
	RT0 = vec4(SampleCube(Skybox, Texcoord).rgb, 1.0);
	SV_Depth = 0x7FFFFFFF;
}
)"

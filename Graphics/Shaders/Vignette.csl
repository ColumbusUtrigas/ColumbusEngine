R"(
#shader vertex = screen_space
#shader fragment
#uniform vec3 Color
#uniform vec2 Center
#uniform float Intensity
#uniform float Smoothness
#uniform float Radius

in vec2 var_UV;

void main(void)
{
	float Diff = Radius - distance(var_UV, Center);
	float Value = smoothstep(-Smoothness, Smoothness, Diff);
	RT0 = vec4(Color, (1.0 - saturate(Value)) * Intensity);
}
)"
